#!/bin/bash

set -e

edit_defconfig(){
# remove localversion
if grep -q -w "CONFIG_LOCALVERSION=" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	sed -i 's/CONFIG_LOCALVERSION=/# CONFIG_LOCALVERSION=/g' "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
# module sig
if grep -q -w "CONFIG_MODULE_SIG=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_MODULE_SIG=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
# cifs posix
if grep -q -w "CONFIG_CIFS_POSIX=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_CIFS_POSIX=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
# efi
if grep -q -w "CONFIG_EFI=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_EFI=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
if grep -q -w "CONFIG_DMI=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_DMI=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
if grep -q -w "CONFIG_SYSFB_SIMPLEFB=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_SYSFB_SIMPLEFB=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
if grep -q -w "CONFIG_EFI_ARMSTUB_DTB_LOADER=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_EFI_ARMSTUB_DTB_LOADER=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
if grep -q -w "CONFIG_EFI_BOOTLOADER_CONTROL=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_EFI_BOOTLOADER_CONTROL=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
if grep -q -w "CONFIG_RESET_ATTACK_MITIGATION=y" "arch/${ARCH}/configs/${LINUX_DEFCONFIG}"; then
	:;
else
	echo "CONFIG_RESET_ATTACK_MITIGATION=y" >> "arch/${ARCH}/configs/${LINUX_DEFCONFIG}";
fi
}
